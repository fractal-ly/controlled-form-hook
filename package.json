{
  "name": "controlled-form-hook",
  "version": "1.0.10",
  "description": "React hook for handling forms with controlled components",
  "author": "Gustavo Gallegos",
  "license": "MIT",
  "repository": "fractal-ly/controlled-form-hook",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "test": "cross-env CI=1 react-scripts test --env=jest-environment-jsdom-sixteen",
    "test2": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "build": "rollup -c && tsc -d --emitDeclarationOnly --noEmit false --declarationDir dist",
    "start": "rollup -c -w",
    "prepare": "yarn run build",
    "predeploy": "cd example && yarn install && yarn run build",
    "version": "standard-version",
    "deploy": "gh-pages -d example/build"
  },
  "dependencies": {
    "immer": "^9.0.5",
    "tiny-validation": "1.0.10"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/runtime": "^7.3.1",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@rollup/plugin-url": "^5.0.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^3.2.1",
    "@testing-library/user-event": "^13.2.0",
    "@types/jest": "^23.3.13",
    "@types/react": "^16.7.22",
    "cross-env": "^5.2.0",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-testing-library": "^4.10.1",
    "gh-pages": "^2.0.1",
    "jest-environment-jsdom-sixteen": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^3.4.0",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.26.9",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "standard-version": "^9.3.1",
    "tslib": "^2.0.1",
    "typescript": "^3.2.4"
  }
}
